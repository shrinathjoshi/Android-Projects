<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="13dp"
        android:src="@drawable/images"
        android:id="@+id/custom_bar_image" />

    <TextView
        android:id="@+id/custom_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/custom_bar_image"
        android:layout_marginStart="41dp"
        android:text="Display Name"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/custom_bar_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp
"
        android:text="Last Seen"
        android:layout_below="@+id/custom_bar_image"
        android:layout_alignStart="@+id/custom_bar_title" />

</RelativeLayout>